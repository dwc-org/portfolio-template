---
import Section from "./Section.astro";

interface Props {
  tools: string[];
}

const { tools } = Astro.props;
---

<Section text="Favorite Tools" href="tools">
  <ul class="flex flex-wrap gap-2">
    {
      tools.map((tool) => (
        <li class="inline-block rounded-full bg-neutral/10 px-4 py-2 text-sm font-medium text-white">
          {tool}
        </li>
      ))
    }
  </ul>
</Section>

