---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="py-24 md:py-32" id="#hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mt-4 mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="flex gap-4">
    <a
      class="inline-block rounded-full bg-indigo-600 px-6 py-4 text-sm leading-5 font-medium text-white hover:bg-indigo-700"
      href={`mailto:${email}`}>Get in Touch</a
    >

    <a
      class="inline-block rounded-full border border-neutral/20 bg-transparent px-6 py-4 text-sm leading-5 font-medium text-white hover:bg-neutral/5"
      href="#projects">Browse Projects</a
    >
  </div>
</section>
